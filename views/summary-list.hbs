
<style media="screen">
  .left {
    width: 100px;
    height:25;
    display:inline-block;
    background-color:darkgrey;
    text-align: center;
  }
  .right {
    width: 100px;
    height:25;
    display:inline-block;
    background-color:lightgray;
    text-align: center;
  }
  #summaryContainer{
    width: 100%;
    display:flex;


  }
  .lists{
    width:30%;
    background-color:lightgray;
    overflow-y:scroll;
    height:100vh;
  }
  .textContainer{
    width:70%;
  }
</style>

{{#if summary}}
  <div id="summaryContainer">
    <div class="textContainer">
              <div class="title">


                  <h2>Here is the list of the words from your text</h2>

                  <h3>Text Title: {{summary.name}}</h3>

              </div>


              <div id="textContentVisible">

              </div>
              <div id="textContent" style ="visibility:hidden;">
                {{summary.text}}
              </div>
    </div>

    <div class="lists">

                <ul>
                    {{#each summary.decodedText as |word|}}

                      <li><span class="left">{{word.[0]}}</span><span class="right">{{word.[1]}}</span></li>

                    {{/each}}
                </ul>
    </div>
  </div>




{{/if}}
